{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "indent": [1, 2, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "comma-dangle": [1, "never"],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-console": 1
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
